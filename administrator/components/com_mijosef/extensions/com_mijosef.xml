<?xml version="1.0" encoding="utf-8"?>
<install type="mijosef_ext" version="1.5.0" method="upgrade">
	<name>MijoSEF</name>
	<author>Mijosoft LLC</author>
	<creationDate>August 2012</creationDate>
	<copyright>(C) 2009-2012 Mijosoft LLC</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>info@mijosoft.com</authorEmail>
	<authorUrl>www.mijosoft.com</authorUrl>
	<version>1.1.0</version>
	<description>MijoSEF extension for MijoSEF.</description>
	
	<files>
		<filename mijosef_ext="com_mijosef">com_mijosef.php</filename>
	</files>
	
	<params group="url">
        <param name="tag_prefix" type="text" default="" label="Tag URL prefix" description="Tag URL prefix" />
		<param name="tag_part" type="list" default="global" label="COM_MIJOSEF_PARAMS_URL_PART_TAG" description="COM_MIJOSEF_PARAMS_URL_PART_TAG">
 			<option value="global">Use Global</option>
 			<option value="title">COM_MIJOSEF_COMMON_TITLE_FIELD</option>
 			<option value="alias">COM_MIJOSEF_COMMON_ALIAS_FIELD</option>
 		</param>
		<param name="tagid_inc" type="radio" default="1" label="COM_MIJOSEF_PARAMS_URL_TAG_ID" description="COM_MIJOSEF_PARAMS_URL_TAG_ID_HELP">
 			<option value="1">No</option>
 			<option value="2">Yes</option>
 		</param>
 	</params>

	<config>
		<fields name="params">
			<fieldset name="url">
				<field name="tag_prefix" type="text" default="" label="Tag URL prefix" description="Tag URL prefix" />
				<field name="tag_part" type="list" default="global" label="COM_MIJOSEF_PARAMS_URL_PART_TAG" description="COM_MIJOSEF_PARAMS_URL_PART_TAG">
					<option value="global">Use Global</option>
					<option value="title">COM_MIJOSEF_COMMON_TITLE_FIELD</option>
					<option value="alias">COM_MIJOSEF_COMMON_ALIAS_FIELD</option>
				</field>
				<field name="tagid_inc" type="radio" default="1" label="COM_MIJOSEF_PARAMS_URL_TAG_ID" description="COM_MIJOSEF_PARAMS_URL_TAG_ID_HELP">
					<option value="1">No</option>
					<option value="2">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</install>